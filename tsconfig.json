{
    "compilerOptions":
    {
        "module": "commonjs",
        "moduleResolution": "node",
        "noImplicitReturns": true,
        "noUnusedLocals": true,
        "outDir": "lib",
        "sourceMap": true,
        "strict": true,
        "target": "es2017",
        "esModuleInterop": true,
        "noImplicitAny": false
    },
    "compileOnSave": true,
    // TS complains if it doesn't find ressources under the include folder
    "include": [
        "server/src/**/*"
    ],
    "exclude": [
        "node_modules",
        "lib"
    ]
}